! Custom Theme v2

! Define colors
*.colorRedwood:       #9c554f
*.colorCaputMortuum:  #4f302e
*.colorCoralPink:     #db927b
*.colorPaynesGray:    #566e70
*.colorSilver:        #b1b1b1
*.colorGray:          #767676
*.colorDavysGray:     #494949
*.colorEerieBlack:    #1c1c1c
*.colorDun:           #c8c1ae
*.colorDimGray:       #6b695c

! Window Border
border.width:         1
border.color:         *.colorEerieBlack

! Window Title
window.title.height:  18
window.title.overlay: false

window.label.focus:   *.colorRedwood
window.label.unfocus: *.colorGray
window.label.textColor.focus:   *.colorSilver
window.label.textColor.unfocus: *.colorDun

window.frame.focus:   *.colorDavysGray
window.frame.unfocus: *.colorEerieBlack

! Window Handle
window.handle.focus:  *.colorRedwood
window.handle.unfocus:*.colorPaynesGray

! Window Text
window.font:         sans-10:bold
window.justify:      Center

! Menu
menu.frame:          *.colorCaputMortuum
menu.title:          *.colorRedwood
menu.title.textColor:*.colorSilver
menu.frame.textColor:*.colorDun
menu.hilite:         *.colorCoralPink
menu.hilite.textColor:*.colorEerieBlack

! Slit
slit.color:          *.colorCaputMortuum
slit.borderWidth:    1
slit.borderColor:    *.colorDimGray

! Toolbar
toolbar.height:      18
toolbar.frame:       *.colorGray
toolbar.textColor:   *.colorSilver
toolbar.borderColor: *.colorDimGray

toolbar.button:      *.colorDavysGray
toolbar.button.pressed:*.colorRedwood
toolbar.button.hover:*.colorCoralPink
toolbar.clock:       *.colorRedwood
toolbar.clock.textColor:*.colorSilver

! Tooltips
tooltip.title.background: *.colorGray
tooltip.title.textColor:  *.colorSilver
tooltip.frame.background: *.colorCaputMortuum
tooltip.frame.textColor:  *.colorSilver

! Root Background
background.color:    *.colorDun

! Active Window Handle (Optional, for visibility)
window.activeHandleColor: *.colorCoralPink
